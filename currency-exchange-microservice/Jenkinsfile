//SCRIPTER

//DECLARATIVE
pipeline {
    // agent any
    agent { docker { image 'maven:3.9.4' } }
    stages {
        stage('Build') {
            steps {
                echo 'Build'
                echo 'mvn --version'
                echo "Path: $PATH"
                echo "Build number: $env.BUILD_NUMBER"
            }
        }
        stage('Test') {
            steps {
                echo 'Test'
            }
        }
        stage('Integration Test') {
            steps {
                echo 'Integration Test'
            }
        }
    }
    post {
        always {
            echo 'I am awesome'
        }
        success {
            echo 'I got success'
        }
        failure {
            echo 'failed'
        }
    }
}
